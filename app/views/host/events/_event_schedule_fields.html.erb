  <div class="row mx-auto">
    <div class="col-xs-6 mx-3">
      <%= f.datetime_field :candidate_date_start, min: Date.today, class: "form-control", placeholder: "開始日時" %>
    </div>
    ～
    <div class="col-xs-4 mx-3">
