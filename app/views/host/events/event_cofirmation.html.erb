<div class="container">
  <div class="row">
    <h4>内容確認</h4>
    <div><%= @event.title %></div>
    <div><%= @event.schedule_time %></div>
    <div><%= @event.comment %></div>
    <% @event.event_schedules.each do |event_schedule| %>
      <div><%= event_schedule.candidate_date_start.strftime('%Y/%m/%d %H:%M') %></div>
      <p>～</p>
      <div><%= event_schedule.candidate_date_end.strftime('%H:%M') %></div>
    <% end %>

    <%= form_with model:@event, url: host_events_path, method: :post do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :schedule_time %>
      <%= f.hidden_field :comment %>
        <%= f.fields_for :event_schedules do |i| %>
          <%= i.hidden_field :candidate_date_start %>
          <%= i.hidden_field :candidate_date_end %>
        <% end %>
      <%= f.submit "イベントを登録", class:"btn btn-success" %>
    <% end %>
  </div>
</div>