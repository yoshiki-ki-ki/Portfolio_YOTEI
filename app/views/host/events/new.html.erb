<div class="container">
  <div class="row">
      <%= form_with model: @event, url: host_events_event_cofirmation_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :イベントタイトル, class: "mr-5" %>
          <%= f.text_field :title, placeholder: "", class: "mr-5" %>
        </div>
        <div class="form-group">
          <%= f.label :予定時間, class: "mr-5" %>
          <%= f.text_field :schedule_time, placeholder: "約4時間", class: "mr-5" %>
        </div>
        <div class="form-group">
          <%= f.label :コメント, class: "mr-5" %>
          <%= f.text_area :commet, placeholder: "##:##に○○駅に集合", class: "mr-5" %>
        </div>
        <div class="form-group">
          <%= f.label :候補日, class: "mr-5" %>
          <%= f.datetime_field :candidate_date_start, placeholder: "候補日" %>
          <%= "～" %>
          <%= f.time_field :candidate_date_end, placeholder: "候補日", class: "mr-5" %>
        </div>
        <%= f.submit '内容を確認', class: "btn btn-success" %>
      <% end %>
  </div>
</div>
