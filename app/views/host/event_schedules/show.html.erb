<div class="container">
  <h4>みんなの回答を確認</h4>
  <div class="row">
    <div>
      <%= @event_schedule.candidate_date.strftime('%Y/%m/%d') %>
      <%= @event_schedule.candidate_time_start.strftime('%H:%M') %>
      ～
      <%= @event_schedule.candidate_time_end.strftime('%H:%M') %>
    </div>
  </div>
  <div class="row">
    <div>
      <% @guests.each do |guest| %>
        <div>
          <%= guest.guest_name %>さん
          参加者からのコメント<%= guest.comment_to_host %>
          参加可否
          <% @guest_schedules.each do |guest_schedule|%>
            <% if guest.id == guest_schedule.guest_id %>
              <% if guest_schedule.join_flag == true %>
              <p>参加できる</p>
              <% else %>
              <p>参加できない</p>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to "この日に決定する", host_schedule_confirmation_event_schedule_path, class: "btn btn-light" %>
</div>